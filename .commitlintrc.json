{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "subject-max-length": [2, "always", 120],
    "scope-enum": [2, "always", ["app", "hacks", "tools"]],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "release",
        "revert",
        "style",
        "test"
      ]
    ]
  }
}
