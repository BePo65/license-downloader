{
  "name": "license-downloader",
  "version": "1.0.8",
  "description": "Download the license files of the dependencies of a project",
  "main": "index.js",
  "bin": {
    "license-downloader": "index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib/config.js",
    "lib/filesystem-service.js",
    "lib/web-service.js",
    "lib/util.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BePo65/license-downloader.git"
  },
  "bugs": "https://github.com/BePo65/license-downloader/issues",
  "scripts": {
    "lint": "npx eslint -c .eslintrc.json **/*.js **/*.json",
    "test": "npx mocha -R spec",
    "lint-commits": "commitlint --from d6a731d70b4f2 --to HEAD --verbose",
    "init-changelog": "standard-version -i CHANGELOG.md --same-file --prerelease pre --first-release",
    "release": "standard-version -i CHANGELOG.md --same-file"
  },
  "keywords": [
    "license",
    "cli",
    "download"
  ],
  "author": "BePo65",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.4",
    "got": "^13.0.0",
    "jsonfile": "^6.1.0",
    "rc": "^1.2.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-angular": "^18.6.0",
    "chai": "^5.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-jsdoc": "^48.0.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-security-node": "^1.1.4",
    "husky": "^9.0.7",
    "mocha": "^10.2.0",
    "standard-version": "^9.5.0",
    "temp": "^0.9.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "packageFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ],
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "README.md",
        "updater": "tools/npm-scripts/readme-updater.cjs"
      }
    ]
  }
}
