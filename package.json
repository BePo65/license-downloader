{
  "name": "license-downloader",
  "version": "1.0.4",
  "description": "Download the license files of the dependencies of a project",
  "main": "index.js",
  "bin": {
    "license-downloader": "index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=13.2"
  },
  "files": [
    "/lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BePo65/license-downloader.git"
  },
  "bugs": "https://github.com/BePo65/license-downloader/issues",
  "scripts": {
    "lint": "npx eslint -c .eslintrc.json **/*.js **/*.json",
    "test": "npx mocha -R spec",
    "lint-commits": "commitlint --from d6a731d70b4f2 --to HEAD --verbose",
    "init-changelog": "standard-version -i CHANGELOG.md --same-file --prerelease pre --first-release",
    "release": "standard-version -i CHANGELOG.md --same-file"
  },
  "keywords": [
    "license",
    "cli",
    "download"
  ],
  "author": "BePo65",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.3",
    "got": "^11.8.3",
    "jsonfile": "^6.1.0",
    "rc": "^1.2.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-angular": "^16.0.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.8.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-jsdoc": "^37.8.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.1.1",
    "husky": "^7.0.4",
    "mocha": "^9.2.0",
    "standard-version": "^9.3.2",
    "temp": "^0.9.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "packageFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ],
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "README.md",
        "updater": "tools/npm-scripts/readme-updater.cjs"
      }
    ]
  }
}
